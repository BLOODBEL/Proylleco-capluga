@model IEnumerable<Capluga.Entities.FacturaCursoEnt>
@{
    ViewBag.Title = "Consulta Matriculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-6 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <h2>Solicitud de Matriculas</h2>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Numenoro de Facturas</th>

                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model)
                        {
                            <tr>
                                <td>@detail.MasterPurchaseCurseID</td>

                                <td>@detail.PaymentStatus</td>

                                @if (detail.PaymentStatus == "PENDIENTE")
                                {
                                    <td style="text-align:center">
                                        <a href="@Url.Action("ActualizarEstadoCurso", "Registeredcourses", new { q = detail.MasterPurchaseCurseID })"><i class="fa fa-refresh fa-lg"></i></a>
                                    </td>

                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
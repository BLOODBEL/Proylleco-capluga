@model Capluga.Entities.ProductoEnt
@{
    ViewBag.Title = "ActualisaProducto";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="container">

                    <h2 class="card-title">Actualizar Producto</h2>

                    @if (ViewBag.MensajeUsuario != null)
                    {
                        <div class="alert alert-danger" role="alert" style="text-align:center">
                            @ViewBag.MensajeUsuario
                        </div>
                    }

                    @using (Html.BeginForm("ActualizarProducto", "Producto", FormMethod.Post, new { @class = "pt-3", @enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.MedicalImplementsID)

                <div class="form-group">
                    <label>Nombre</label>
                    @Html.TextBoxFor(m => m.Name, new
                    {
                        @class = "form-control form-control-lg",
                        @placeholder = "Nombre",
                       @type = "text"
                   })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control form-control-lg", @placeholder = "Descripción", @type = "text" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Cantidad</label>
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control form-control-lg", @placeholder = "Cantidad", @type = "number" })
                    @Html.ValidationMessageFor(m => m.Quantity, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Precio</label>
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control form-control-lg", @placeholder = "Precio", @type = "number" })
                    @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                </div>
                        <div class="form-group">
                            <label>Imagen</label>
                            <input type="file" class="form-control" id="Image" name="Image">
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="button" class="btn btn-primary" onclick="confirmUpdate()">
                                    Actualizar
                                </button>

                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
 
    </main>
     

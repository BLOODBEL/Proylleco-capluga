@model IEnumerable<Capluga.Entities.FacturaEnt>

    @{
        ViewBag.Title = "Consulta Facturas";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="card-title text-uppercase" style="color: #1A237E; font-weight: bold;">
                    <i class="fa fa-shopping-bag" aria-hidden="true"></i> Mis Pedidos
                </h2>
            </div>
           
            <br>
            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }


            @if (Model.Count() > 0)
            {
                <div class="container">

                    <table id="DataTable" class="table table-bordered table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Número de Factura</th>
                                <th>Fecha de Compra</th>
                                <th>Total de la Compra</th>
                                <th>Ver Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center"># @item.MasterPurchaseID</td>
                                    <td style="text-align:center">@item.PurchaseDate.ToString("dd/MM/yyyy")</td>
                                    <td style="text-align:center">@item.TotalPurchase.ToString("C", new System.Globalization.CultureInfo("es-CR"))</td>
                                    <td style="text-align:center">
                                        <a href="@Url.Action("ConsultaDetalleFactura", "Carrito", new { q = item.MasterPurchaseID })">
                                            <i class="fa fa-search fa-lg"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="col-12 alert alert-info" role="alert" style="text-align: center; margin-top: 5%;">
                    No hay productos agregados en este momento
                </div>
            }
        </div>
            </div>
    </div>
      

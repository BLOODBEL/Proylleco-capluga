@model Capluga.Entities.HorarioEnt

@{
    ViewBag.Title = "Registrar Nuevo Horario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-10 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">


                <main>
                    <div class="content-wrapper d-flex align-items-center auth px-0">
                        <div class="row w-100 mx-0">
                            <div class="col-lg-8 mx-auto">
                                <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                    <div class="container">
                                        @using (Html.BeginForm("RegistrarHorarios", "CitaHorario", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            if (ViewBag.MensajeUsuario != null)
                                            {
                                                <div class ="alert alert-danger" role="alert" style="text-align:center">
                                                    @ViewBag.MensajeUsuario
                                            </div>
                                        }

                                            <h2>Registrar Horario</h2>
                                            <div class="form-group">
                                                <label class="control-label" for="Dname">
                                                    <i class="fas fa-calendar-alt"></i> Dia del Horario
                                                </label>
                                                @Html.EditorFor(model => model.Dname, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Dname, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label" for="DateandTime">
                                                    <i class="fas fa-clock"></i> Fecha y Hora
                                                </label>
                                                @Html.EditorFor(model => model.DateandTime, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                                                @Html.ValidationMessageFor(model => model.DateandTime, "", new { @class = "text-danger" })

                                            </div>


                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <button type="button" class="btn btn-primary" onclick="confirmInsert()">
                                                        <i class="fas fa-save"></i> Registrar
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                        </div>
                    </div>
                        </div>
                </main>

            </div>
        </div>
    </div>
</div>


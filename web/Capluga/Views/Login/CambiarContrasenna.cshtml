@model Capluga.Entities.UsuarioEnt

@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<br />
<br />

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-danger" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }
                <h2>Cambio de contraseña</h2>

                @using (Html.BeginForm("CambiarContrasenna", "Login", FormMethod.Post, new { @class = "pt-3" }))
                {
                    <div class="form-group">
                        <label>Correo electrónico</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Contraseña temporal</label>
                        @Html.TextBoxFor(m => m.Temporary, new { @class = "form-control form-control-lg", @placeholder = "Contraseña Temporal", @type = "password" })
                        @Html.ValidationMessageFor(m => m.Temporary, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Contraseña nueva</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Contraseña Nueva", @type = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-success btn-lg font-weight-medium auth-form-btn" value="CAMBIAR CONTRASEÑA">
                    </div>

                    <div class="text-center mt-4 font-weight-light">
                        ¿No tienes una cuenta? <a href="@Url.Action("RegistrarCuenta","Login")" class="text-primary">Registrarse</a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

